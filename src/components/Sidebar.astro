
<div id="sidebar" class="fixed top-0 left-0 h-full w-72 bg-white shadow-lg z-50 transform -translate-x-full transition-transform duration-300 ease-in-out">
    <div class="card w-full bg-white p-5 shadow-md shadow-purple-200/50 rounded-md h-full">
   
      <div class="flex justify-end mb-4">
        <button id="close-sidebar" onclick="toggleSidebar()" class="text-gray-500 hover:text-gray-700 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <ul class="w-full flex flex-col gap-2">
        <li class="flex-center cursor-pointer p-16-semibold w-full whitespace-nowrap">
          <button class="p-16-semibold flex size-full gap-4 p-4 group font-semibold rounded-full bg-cover hover:bg-purple-100 hover:shadow-inner focus:bg-gradient-to-r from-purple-400 to-purple-600 focus:text-white text-gray-700 transition-all ease-linear">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="size-6">
              <path class="group-focus:fill-white" fill="#000" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Equipos
          </button>
        </li>
        
        <li class="flex-center cursor-pointer p-16-semibold w-full whitespace-nowrap">
          <button class="p-16-semibold flex size-full gap-4 p-4 group font-semibold rounded-full bg-cover hover:bg-purple-100 hover:shadow-inner focus:bg-gradient-to-r from-purple-400 to-purple-600 focus:text-white text-gray-700 transition-all ease-linear">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="size-6">
              <path class="group-focus:fill-white" fill="#000" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            Patrocinadores
          </button>
        </li>
      </ul>
    </div>
  </div>
  
  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const burger = document.getElementById('burger');

      let isOpen = sidebar?.classList.contains('translate-x-0');
      
      if (sidebar && burger) {
        sidebar.classList.toggle('translate-x-0');
        sidebar.classList.toggle('-translate-x-full');
        (burger as HTMLInputElement).checked = !(burger as HTMLInputElement).checked;

        if (isOpen) {
          sidebar.classList.remove('translate-x-0');
          sidebar.classList.add('-translate-x-full');
          (burger as HTMLInputElement).checked = false;
        }
        
      }
    }
  
    document.addEventListener('DOMContentLoaded', function() {
      const burger = document.getElementById('burger');
      if (burger) {
        burger.addEventListener('change', toggleSidebar)
        const closeSidebar = document.getElementById('close-sidebar');
        if (closeSidebar) {
          closeSidebar.addEventListener('click', toggleSidebar)
        }
      }
      
 
      document.addEventListener('click', function(event) {
        const sidebar = document.getElementById('sidebar');
        const burger = document.getElementById('burger');
        
        if (sidebar && burger && !sidebar.contains(event.target as Node) && !burger?.closest('label')?.contains(event.target as Node)) {
          if (sidebar.classList.contains('translate-x-0')) {
            sidebar.classList.remove('translate-x-0');
            sidebar.classList.add('-translate-x-full');
            (burger as HTMLInputElement).checked = false;
          }
        }
      });
    });
  </script>