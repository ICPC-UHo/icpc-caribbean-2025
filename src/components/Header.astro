---
import NavIcon from "@/components/NavIcon.astro";
import IcpcLogo from "@/assets/ICPC_logo.svg";
---

<header class="mx-auto flex max-w-2xl justify-between items-center px-4 py-4 sm:px-6">

  <NavIcon />
  <img src={IcpcLogo.src} alt="ICPC Logo" class="w-20 h-20" />

  <nav class="hidden md:block text-sm sm:text-base">
    <a href="#teams">Equipos</a>
  </nav>
  <nav class="hidden md:block text-sm sm:text-base">
    <a href="#sponsors">Patrocinadores</a>
  </nav>
</header>

<style>
  header nav {
    --size: 3px;
    position: relative;
  }
  header nav::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 50%;
    background-color: var(--color-red);
    height: var(--size);
    width: 0;
    transition: width 0.2s ease-in-out;
  }
  header nav::before {
    content: "";
    position: absolute;
    bottom: -4px;
    right: 50%;
    background-color: var(--color-yellow);
    height: var(--size);
    width: 0;
    transition: width 0.2s ease-in-out;
  }
  header nav:hover::after,
  header nav:hover::before {
    width: 50%;
  }
</style>