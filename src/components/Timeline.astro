---
import { SCHEDULE } from "@/lib/data";
---

<section class="bg-yellow">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
    <path
      fill="var(--color-blue)"
      fill-opacity="1"
      d="M0,64L1440,224L1440,0L0,0Z"></path>
  </svg>
  <div class="mx-auto max-w-4xl px-4 sm:px-6">
    <h2 class="text-blue mb-12 text-center text-3xl sm:text-4xl">Cronograma</h2>

    <div class="relative">
      <!-- Vertical line - left on mobile, center on desktop -->
      <div
        class="bg-blue absolute top-0 left-4 h-full w-1 md:left-1/2 md:-translate-x-1/2"
      >
      </div>

      <!-- Timeline items -->
      <div class="space-y-8 md:space-y-12">
        {
          SCHEDULE.map((item, index) => {
            const isLeft = index % 2 === 0;
            const date = new Date(item.date);
            const formattedDate = date.toLocaleDateString("es-ES", {
              year: "numeric",
              month: "long",
              day: "numeric",
            });

            return (
              <div
                class={`relative flex items-center ${isLeft ? "md:flex-row" : "md:flex-row-reverse"}`}
              >
                {/* Content card - full width on mobile, half on desktop */}
                <div
                  class={`w-full pl-6 md:w-5/12 md:pl-0 ${isLeft ? "md:pr-0 md:text-right" : "md:pl-0 md:text-left"}`}
                >
                  <div
                    class={`rounded-lg bg-white p-4 shadow-lg sm:p-6 ${isLeft ? "md:-mr-6" : "md:-ml-6"}`}
                  >
                    <time
                      datetime={item.date}
                      class="text-blue mb-2 block text-lg font-bold sm:text-xl"
                    >
                      {formattedDate}
                    </time>
                    <p class="text-sm text-gray-700 sm:text-base">
                      {item.description}
                    </p>
                  </div>
                </div>

                {/* Calendar icon - left on mobile, positioned relative to center on desktop */}
                <div class="absolute left-1 z-10 md:hidden">
                  <div class="bg-blue flex h-6 w-6 items-center justify-center rounded-full shadow-md sm:h-8 sm:w-8">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="white"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="h-4 w-4 sm:h-5 sm:w-5"
                      aria-label="Calendario"
                      role="img"
                    >
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                      <line x1="16" y1="2" x2="16" y2="6" />
                      <line x1="8" y1="2" x2="8" y2="6" />
                      <line x1="3" y1="10" x2="21" y2="10" />
                    </svg>
                  </div>
                </div>

                {/* Center dot - hidden on mobile, visible on desktop */}
                <div class="absolute left-1/2 hidden -translate-x-1/2 md:block">
                  <div class="bg-yellow h-4 w-4 rounded-full border-4 border-white shadow-md" />
                </div>

                {/* Empty space on the other side - only on desktop */}
                <div class="hidden md:block md:w-5/12" />
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
    <path
      fill="var(--color-red)"
      fill-opacity="1"
      d="M0,224L0,288L180,288L180,224L360,224L360,224L540,224L540,224L720,224L720,128L900,128L900,224L1080,224L1080,96L1260,96L1260,64L1440,64L1440,320L1260,320L1260,320L1080,320L1080,320L900,320L900,320L720,320L720,320L540,320L540,320L360,320L360,320L180,320L180,320L0,320L0,320Z"
    ></path>
  </svg>
</section>
