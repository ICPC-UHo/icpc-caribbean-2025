---
import { SCHEDULE } from "@/lib/info";
---

<section class="bg-gray-50 py-16">
  <div class="mx-auto max-w-4xl px-4">
    <h2 class="text-blue mb-12 text-center text-4xl">Cronograma</h2>

    <div class="relative">
      <!-- Vertical line -->
      <div class="bg-blue absolute top-0 left-1/2 h-full w-1 -translate-x-1/2">
      </div>

      <!-- Timeline items -->
      <div class="space-y-12">
        {
          SCHEDULE.map((item, index) => {
            const isLeft = index % 2 === 0;
            const date = new Date(item.date);
            const formattedDate = date.toLocaleDateString("es-ES", {
              year: "numeric",
              month: "long",
              day: "numeric",
            });

            return (
              <div
                class={`relative flex items-center ${isLeft ? "flex-row" : "flex-row-reverse"}`}
              >
                {/* Content card */}
                <div
                  class={`w-5/12 ${isLeft ? "pr-8 text-right" : "pl-8 text-left"}`}
                >
                  <div class="rounded-lg bg-white p-6 shadow-lg">
                    <h3 class="text-blue mb-2 text-xl font-bold">
                      {formattedDate}
                    </h3>
                    <p class="text-gray-700">{item.description}</p>
                  </div>
                </div>

                {/* Calendar icon - positioned closer to center line */}
                <div
                  class={`absolute ${isLeft ? "left-[calc(41.666%-1rem)]" : "left-[calc(58.333%-1rem)]"} z-10`}
                >
                  <div class="bg-blue flex h-8 w-8 items-center justify-center rounded-full shadow-md">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="white"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="h-5 w-5"
                    >
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                      <line x1="16" y1="2" x2="16" y2="6" />
                      <line x1="8" y1="2" x2="8" y2="6" />
                      <line x1="3" y1="10" x2="21" y2="10" />
                    </svg>
                  </div>
                </div>

                {/* Center dot */}
                <div class="absolute left-1/2 -translate-x-1/2">
                  <div class="bg-yellow h-4 w-4 rounded-full border-4 border-white shadow-md" />
                </div>

                {/* Empty space on the other side */}
                <div class="w-5/12" />
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
</section>
